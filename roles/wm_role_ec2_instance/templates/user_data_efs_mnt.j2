#cloud-config
hostname: {{ ec2_fqdn }}
fqdn: {{ ec2_fqdn }}
manage_etc_hosts: true

packages:
- nfs-utils

runcmd:
- mkdir -p {{ ec2_efs_mnt_path | d ('/mnt/efs') }}
- chown ec2-user:ec2-user {{ ec2_efs_mnt_path | d ('/mnt/efs') }}
- chmod 777 {{ ec2_efs_mnt_path | d ('/mnt/efs') }}
- echo "{{ ec2_efs }}:/ {{ ec2_efs_mnt_path | d ('/mnt/efs') }} nfs4 nfsvers=4.1,rsize=1048576,wsize=1048576,hard,timeo=600,retrans=2 0 0" >> /etc/fstab
- mount -a -t nfs4
