{
    "name" : "repo",
    "jndiName" : "",
    "workspaces" : {
        "predefined" : ["default"],
        "default" : "default",
        "allowCreation" : true,
        "cacheSize" : 10000
    },
    "storage" : {
        "persistence": {
            "type" : "db",
            "connectionUrl": "jdbc:mysql://${fcrepo.mysql.host:localhost}:${fcrepo.mysql.port:3306}/{{ fedora_db_name }}?createDatabaseIfNotExist=true&useSSL=false",
            "driver" : "com.mysql.jdbc.Driver",
            "username" : "${fcrepo.mysql.username}",
            "password" : "${fcrepo.mysql.password}"
        },
        "binaryStorage" : {
            "type" : "file",
            "directory" : "${fcrepo.binary.directory:target/binaries}",
            "minimumBinarySizeInBytes" : 4096
        }
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        },
        "providers" : [
            { "classname" : "org.fcrepo.auth.common.BypassSecurityServletAuthenticationProvider" }
        ]
    },
    "garbageCollection" : {
        "threadPool" : "modeshape-gc",
        "initialTime" : "00:00",
        "intervalInHours" : 24
    },
    "node-types" : ["fedora-node-types.cnd"]
}
