ec2_efs: fs-97466374.efs.us-east-1.amazonaws.com
rds_host: dlp-tst-rdsmys-sz
ec2_instance_type: t3.large
git_repo_branch: v0.3.7

symblink_dirs:
#  - src: "/mnt/efs/{{ project_name }}"
#    path: "{{ capistrano_base }}/{{ project_name }}"
  - src: "/mnt/efs/uploads"
    path: "{{ capistrano_base }}/uploads"

dlp_curate_dotenv:
  admin_password: "{{ vault_dlp.project.default_admin_password }}"
  contact_us_email: "test@emory.edu"
  cache_path: "/opt/uploads/dlp-curate/cache/"
  upload_path: "/opt/uploads/dlp-curate/"
  working_path: "/opt/uploads/dlp-curate/"
  derivatives_path: "/opt/uploads/dlp-curate/derivatives/"
  database_auth: false
  database_adapter: "mysql2"
  database_pool: 5
  database_name: "{{ dlp_curate_mysql_db.name }}"
  database_username: "{{ dlp_curate_mysql_db.user }}"
  database_host: "{{ rds_endpoint }}"
  database_password: "{{ dlp_curate_mysql_db.password }}"
  geonames_username: "{{ vault_geonames_username }}"
  project_name: "dlp-curate"
  sidekiq_workers: 5
  fedora_url: "http://fedora-cor-test.library.emory.edu/fcrepo/rest"
  fedora_user: "{{ vault_fedora.admin.user }}"
  fedora_password: "{{ vault_fedora.admin.pass }}"
#  solr_url: "https://util-cor-test.library.emory.edu/solr/curatecore"
  solr_url: "http://solr-cor-test.library.emory.edu/solr/curate_collection"
  redis_host: localhost
  redis_port: 6379

dlp_curate_mysql_db:
  name: "{{ vault_curate.test.db.name }}"
  user: "{{ vault_curate.test.db.user }}"
  password: "{{ vault_curate.test.db.pass }}"

sp_entity_id: "https://curate.library.emory.edu"
idp_name: "prod"

ec2_security_groups:
  - "{{ sg_pre }}-tp-apache-ssh"
  - "{{ sg_pre }}-t-nfs"
  - "{{ sg_pre }}-t-mysql"
  - "{{ sg_pre }}-t-solr"
  - "{{ sg_pre }}-t-redis"

elb_targets:
  - target_group_name: curate-test-443
