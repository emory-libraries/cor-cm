#proxy_solr_tomcat_conf: "no"

java_home: "/usr/java/latest"
tomcat_install_path:  "/opt"
tomcatapp_install_path: "/usr/local/webapps"
#cantaloupe_install_path: "{{ tomcatapp_install_path }}"
cantaloupe_base_dir: "{{ tomcatapp_install_path }}/cantaloupe"
cantaloupe_fedora_url: "http://fedora-cor-test.library.emory.edu/fcrepo/rest"

elb_targets:
  - target_group_name: util-test-80

ec2_security_groups:
  - "{{ sg_pre }}-tp-apache-ssh"

cwa_conf_json_file_content:
  logs:
    logs_collected:
      files:
        collect_list:
          - file_path: "/var/log/maillog*"
            log_group_name: "{local_hostname}"
            log_stream_name: maillog
            timezone: Local
          - file_path: "/var/solr/logs/*"
            log_group_name: "{hostname}"
            log_stream_name: solr
            timezone: Local
#    log_stream_name: util-cor-test
